{
    "name": "kapix/polyglot",
    "description": "Translation system for Haiku's catkeys, tailored for translating apps from different authors.",
    "keywords": ["translation", "i18n", "haiku"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "doctrine/dbal": "^2.6",
        "laravel/framework": "^9.0",
        "laravel/socialite": "^5.1",
        "laravel/tinker": "^2.7",
        "laravel/ui": "^3.3.3",
        "laravelcollective/html": "^6.3.0",
        "rcrowe/twigbridge": "^0.13.1"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.6.6",
        "barryvdh/laravel-ide-helper": "^2.12.2",
        "filp/whoops": "~2.0",
        "fakerphp/faker": "~1.14",
        "mockery/mockery": "~1.4.0",
        "phpunit/phpunit": "^9.0",
        "nunomaduro/collision": "^6.1"
    },
    "autoload": {
        "classmap": [
            "app/Extensions/Twig"
        ],
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
            ]
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover"
        ],
        "post-update-cmd": [
            "Illuminate\\Foundation\\ComposerScripts::postUpdate",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta"
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}

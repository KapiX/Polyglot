{% extends "layouts.master" %}

{% block title %}Edit profile{% endblock %}

{% block content %}
<ol class="breadcrumb">
    <li>{{ link_to_route('projects.index', 'Home') }}</li>
    <li class="active">Edit profile</li>
</ol>
{{ form_open({url: route('profile.update', project.id), method: 'PUT'},
    {class: 'form-horizontal'}) }}
<div class="form-group{{ errors.has('name') ? ' has-error' }}">
    {{ form_label('name', 'Name', {class: 'control-label'}) }}
    {{ form_text('name', user.name, {class: 'form-control'}) }}
    {% for error in errors.get('name') %}
        <span class="help-block">{{ error }}</span>
    {% endfor %}
</div>
<div class="form-group{{ errors.has('email') ? ' has-error' }}">
    {{ form_label('email', 'E-mail', {class: 'control-label'}) }}
    {{ form_text('email', user.email, {class: 'form-control'}) }}
    {% for error in errors.get('email') %}
        <span class="help-block">{{ error }}</span>
    {% endfor %}
</div>
<div class="form-group">
    {{ form_submit('Save', {class: 'btn btn-default'}) }}
</div>
{{ form_close() }}
{% endblock %}
